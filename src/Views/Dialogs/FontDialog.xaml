<UserControl x:Class="Reoreo125.Memopad.Views.Dialogs.FontDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reoreo125.Memopad.Views.Dialogs"
             xmlns:converters="clr-namespace:Reoreo125.Memopad.Views.Converters"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>

    <DockPanel Margin="10">
        <DockPanel DockPanel.Dock="Top">
            <DockPanel DockPanel.Dock="Right">
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Margin="0 0 15 15">
                    <Label Content="フォント名(_F):"/>
                    <TextBox VerticalContentAlignment="Center"
                             Width="170"
                             MaxWidth="170"
                             Height="22"/>
                    <ListBox Height="118"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Vertical" Margin="0 0 0 15">
                    <Label Content="サイズ(_S):"/>
                    <TextBox x:Name="SizeTextBox"
                             Width="60"
                             MaxWidth="60"
                             Height="22"
                             VerticalContentAlignment="Center"
                             Text="{Binding Size.Value, UpdateSourceTrigger=PropertyChanged}"
                             PreviewTextInput="NumberOnly_PreviewTextInput"
                             PreviewKeyDown="NumberOnly_PreviewKeyDown"
                             InputMethod.IsInputMethodEnabled="False"
                             MaxLength="3"/>
                    <ListBox Height="118"
                             ItemsSource="{Binding PresetSizes}" 
                             SelectedItem="{Binding ListBoxSize.Value}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0 0 15 15">
                    <Label Content="スタイル(_Y):"/>
                    <TextBox VerticalContentAlignment="Center"
                             Width="130"
                             MaxWidth="130"
                             Height="22" />
                    <ListBox Height="118"/>
                </StackPanel>
            </DockPanel>
        </DockPanel>
        
        <DockPanel DockPanel.Dock="Bottom">
            <DockPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Margin="0 0 10 0"
                        Width="85"
                        Content="OK"
                        Command="{Binding OkCommand}" />
                    <Button Margin="0 0 0 0"
                        Width="85"
                        Content="キャンセル"
                        Command="{Binding CancelCommand}" />
                </StackPanel>
            </DockPanel>
        </DockPanel>
        
        <DockPanel Margin="0 0 0 50">
            <Grid DockPanel.Dock="Left" Width="183"/>
            <StackPanel DockPanel.Dock="Right" Orientation="Vertical">
                <GroupBox Header="サンプル" Padding="10 60 0 0" Margin="0 0 0 0"/>
                <Label Content="文字セット(_R):"/>
                <ComboBox/>
            </StackPanel>
        </DockPanel>
        
    </DockPanel>
    
</UserControl>
