<UserControl x:Class="Reoreo125.Memopad.Views.Dialogs.ReplaceDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reoreo125.Memopad.Views.Dialogs"
             xmlns:models="clr-namespace:Reoreo125.Memopad.Models"
             xmlns:converters="clr-namespace:Reoreo125.Memopad.Views.Converters"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>
    <DockPanel>
        <StackPanel DockPanel.Dock="Right" Margin="10" Orientation="Vertical">
            <Button Content="次を検索(_F)"
                    Width="105"
                    Height="24"
                    Margin="0 0 0 10"
                    IsEnabled="{Binding FindNextButton_IsEnabled.Value}"
                    Command="{Binding FindNextCommand}"/>
            <Button Content="置換して次に(_R)"
                    Width="105"
                    Height="24"
                    Margin="0 0 0 10"
                    IsEnabled="{Binding ReplaceNextButton_IsEnabled.Value}"
                    Command="{Binding ReplaceNextCommand}"/>
            <Button Content="すべて置換(_A)"
                    Width="105"
                    Height="24"
                    Margin="0 0 0 10"
                    IsEnabled="{Binding ReplaceAllButton_IsEnabled.Value}"/>
            <Button Content="キャンセル"
                    Width="105"
                    Height="24"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
        <DockPanel Margin="10">
            <DockPanel DockPanel.Dock="Top">
                <StackPanel Orientation="Vertical">
                    <DockPanel Margin="0 0 0 10">
                        <Label DockPanel.Dock="Left" Content="検索する文字列(_N):" Margin="-4 0 20 0"/>
                        <TextBox Width="240"
                         Height="20"
                         Padding="2"
                         VerticalContentAlignment="Center"
                         FontSize="11"
                         MaxLength="{x:Static models:Defaults.SearchTextMaxLength}"
                         Text="{Binding SearchText.Value, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                    <DockPanel>
                        <Label DockPanel.Dock="Left" Content="置換後の文字列(_P):" Margin="-4 0 20 0"/>
                        <TextBox Width="240"
                         Height="20"
                         Padding="2"
                         VerticalContentAlignment="Center"
                         FontSize="11"
                         MaxLength="{x:Static models:Defaults.ReplaceTextMaxLength}"
                         Text="{Binding ReplaceText.Value, UpdateSourceTrigger=PropertyChanged}"/>
                    </DockPanel>
                </StackPanel>

            </DockPanel>
            <DockPanel LastChildFill="False" Height="90">
                <CheckBox DockPanel.Dock="Bottom"
                          Content="折り返しあり(_R)"
                          IsChecked="{Binding WrapAround.Value}"/>
                <CheckBox DockPanel.Dock="Bottom"
                          Margin="0 0 0 8"
                          Content="大文字と小文字を区別する(_C)"
                          IsChecked="{Binding MatchCase.Value}"/>
            </DockPanel>
        </DockPanel>
    </DockPanel>

</UserControl>
