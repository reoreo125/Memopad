<UserControl x:Class="Reoreo125.Memopad.Views.Dialogs.GoToLineDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reoreo125.Memopad.Views.Dialogs"
             xmlns:converters="clr-namespace:Reoreo125.Memopad.Views.Converters"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d"
             Width="300">
    <UserControl.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>
    <StackPanel Margin="16" Orientation="Vertical">
        <Label Content="行番号(_L)"/>
        <TextBox x:Name="LineIndexTextBox"
                 Height="24"
                 Margin="0 0 0 20"
                 PreviewKeyDown="TextBox_PreviewKeyDown"
                 PreviewTextInput="TextBox_PreviewTextInput"
                 InputMethod.IsInputMethodEnabled="False"
                 Text="{Binding LineIndex.Value}"/>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="移動"
                    Width="84"
                    Height="24"
                    Margin="0 0 10 0"
                    Command="{Binding CancelCommand}"/>
            <Button Content="キャンセル"
                    Width="84"
                    Height="24"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
