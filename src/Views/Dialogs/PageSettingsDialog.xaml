<UserControl x:Class="Reoreo125.Memopad.Views.Dialogs.PageSettingsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Reoreo125.Memopad.Views.Dialogs"
             xmlns:models="clr-namespace:Reoreo125.Memopad.Models"
             xmlns:converters="clr-namespace:Reoreo125.Memopad.Views.Converters"
             xmlns:sp="clr-namespace:System.Printing;assembly=ReachFramework"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:Reoreo125.Memopad.Views.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:PageOrientationToBoolConverter x:Key="PageOrientationToBoolConverter"/>
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="ShowInTaskbar" Value="False"/>
            <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        </Style>
    </prism:Dialog.WindowStyle>
    <DockPanel Margin="20">
        <DockPanel DockPanel.Dock="Top" Margin="0 0 0 20">
            <DockPanel DockPanel.Dock="Left">
                <DockPanel DockPanel.Dock="Top" Margin="0 0 10 10">
                    <GroupBox Header="用紙">
                        <StackPanel Orientation="Vertical">
                            <DockPanel Margin="10">
                                <Label Content="サイズ(_Z):" Margin="0 0 40 0"/>
                                <ComboBox DockPanel.Dock="Right"
                                          Width="280"
                                          ItemsSource="{Binding PageSizeOptions}"
                                          DisplayMemberPath="Name" 
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding PageSizeName.Value, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                            <DockPanel Margin="10">
                                <Label Content="給紙方法(_S):" Margin="0 0 20 0"/>
                                <ComboBox DockPanel.Dock="Right"
                                          ItemsSource="{Binding InputBinOptions.Value}"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Value"
                                          SelectedValue="{Binding InputBin.Value, UpdateSourceTrigger=PropertyChanged}"/>
                            </DockPanel>
                        </StackPanel>
                    </GroupBox>
                </DockPanel>
                <DockPanel DockPanel.Dock="Bottom" Margin="-10 0 0 -8">
                    <StackPanel Orientation="Vertical">
                        <DockPanel Margin="10">
                            <Label Content="ヘッダ(_H):" Margin="0 0 4 0"/>
                            <TextBox DockPanel.Dock="Right"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding Header.Value}"/>
                        </DockPanel>
                        <DockPanel Margin="10">
                            <Label Content="フッター(_F):"/>
                            <TextBox DockPanel.Dock="Right"
                                     VerticalContentAlignment="Center"
                                     Text="{Binding Footer.Value}"/>
                        </DockPanel>
                    </StackPanel>
                </DockPanel>
                <DockPanel Margin="0 0 0 10">
                    <DockPanel Margin="0 0 10 0">
                        <GroupBox Header="印刷の向き" Padding="10 10 40 0">
                            <StackPanel Orientation="Vertical">
                                <RadioButton Content="縦(_O)"
                                             Margin="0 0 0 20"
                                             GroupName="Orientation"
                                             IsChecked="{Binding Orientation.Value, 
                                                                 Converter={StaticResource PageOrientationToBoolConverter}, 
                                                                 ConverterParameter={x:Static sp:PageOrientation.Portrait}}"/>
                                <RadioButton Content="横(_A)"
                                             Margin="0 0 0 20"
                                             GroupName="Orientation"
                                             IsChecked="{Binding Orientation.Value, 
                                                                 Converter={StaticResource PageOrientationToBoolConverter}, 
                                                                 ConverterParameter={x:Static sp:PageOrientation.Landscape}}"/>
                            </StackPanel>
                        </GroupBox>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Right" Margin="0 0 10 0">
                        <GroupBox Header="余白 (ﾐﾘ)">
                            <UniformGrid Rows="2" Columns="2" Margin="0 0 10 0">
                                <DockPanel VerticalAlignment="Center">
                                    <Label Content="左(_L):"/>
                                    <TextBox Height="22"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding MarginLeft.Value}">
                                        <i:Interaction.Behaviors>
                                            <behaviors:NumericInputBehavior />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </DockPanel>
                                <DockPanel VerticalAlignment="Center">
                                    <Label Content="右(_R):"/>
                                    <TextBox Height="22"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding MarginRight.Value}">
                                        <i:Interaction.Behaviors>
                                            <behaviors:NumericInputBehavior />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </DockPanel>
                                <DockPanel VerticalAlignment="Center">
                                    <Label Content="上(_T):"/>
                                    <TextBox Height="22"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding MarginTop.Value}">
                                        <i:Interaction.Behaviors>
                                            <behaviors:NumericInputBehavior />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </DockPanel>
                                <DockPanel VerticalAlignment="Center">
                                    <Label Content="下(_B):"/>
                                    <TextBox Height="22"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding MarginBottom.Value}">
                                        <i:Interaction.Behaviors>
                                            <behaviors:NumericInputBehavior />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </DockPanel>
                            </UniformGrid>
                        </GroupBox>
                    </DockPanel>
                </DockPanel>
            </DockPanel>
            <DockPanel DockPanel.Dock="Right">
                <GroupBox Header="印刷プレビュー" Padding="180 270 0 0"/>
            </DockPanel>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" 
                        Width="84" 
                        Height="26"
                        Command="{Binding OkCommand}"
                        HorizontalAlignment="Center" 
                        Margin="0,0,10,0" />
                <Button Content="キャンセル" 
                        Width="84" 
                        Height="26"
                        Command="{Binding CancelCommand}"
                        HorizontalAlignment="Center" 
                        Margin="0,0,40,0" />
            </StackPanel>
        </DockPanel>
    </DockPanel>

</UserControl>
