<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:prism="http://prismlibrary.com/"
                    xmlns:dialogs="clr-namespace:Reoreo125.Memopad.Views.Dialogs">
    <Style x:Key="MessageBoxDialogBaseStyle" TargetType="{x:Type dialogs:MessageBoxDialogBase}">
        <Setter Property="prism:Dialog.WindowStyle">
            <Setter.Value>
                <Style TargetType="Window">
                    <Setter Property="ResizeMode" Value="NoResize"/>
                    <Setter Property="ShowInTaskbar" Value="False"/>
                    <Setter Property="SizeToContent" Value="WidthAndHeight"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type dialogs:MessageBoxDialogBase}">
                    <DockPanel MaxWidth="410">
                        <StatusBar DockPanel.Dock="Bottom">
                            <StatusBarItem HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Bottom">
                                    <Button Margin="5"
                                            Width="85"
                                            Content="OK"
                                            IsDefault="True"
                                            Command="{Binding OkCommand}" />
                                </StackPanel>
                            </StatusBarItem>
                        </StatusBar>
                        <StackPanel Orientation="Horizontal" Margin="10">
                            <Image Source="{Binding IconSource}" 
                                   Width="32" 
                                   Height="32" 
                                   Margin="10"/>
                            <TextBlock Margin="0,20,0,20"
                                       FontSize="12"
                                       TextWrapping="Wrap"
                                       MaxWidth="320"
                                       Text="{Binding Message}" />
                        </StackPanel>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
