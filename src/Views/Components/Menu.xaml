<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Reoreo125.Memopad.Views.Components.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:commands="clr-namespace:Reoreo125.Memopad.Models.Commands"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Menu>
        <MenuItem Header="ファイル(_F)">
            <MenuItem Header="新規(_N)"
                      InputGestureText="Ctrl+N"
                      Command="{Binding NewTextFileCommand}"/>
            <MenuItem Header="新しいウィンドウ(_W)"
                      InputGestureText="Ctrl+Shift+N"
                      Command="{Binding OpenNewWindowCommand}"/>
            <MenuItem Header="開く(_O)..."
                      InputGestureText="Ctrl+O"
                      Command="{Binding OpenTextFileCommand}" />
            <MenuItem Header="上書き保存(_S)"
                      InputGestureText="Ctrl+S"
                      Command="{Binding SaveTextFileCommand}" />
            <MenuItem Header="名前を付けて保存(_A)..."
                      InputGestureText="Ctrl+Shift+S"
                      Command="{Binding SaveAsTextFileCommand}" />
            <Separator />
            <MenuItem Header="ページ設定(_U)..." />
            <MenuItem Header="印刷(_P)..."
                      InputGestureText="Ctrl+P"
                      Command="{Binding OpenPrintCommand}"/>
            <Separator />
            <MenuItem Header="終了(_X)"
                      InputGestureText="Alt+F4"
                      Command="{Binding ApplicationExitCommand}" />
        </MenuItem>
        <MenuItem Header="編集(_E)">
            <MenuItem Header="元に戻す(_U)"
                      InputGestureText="Ctrl+Z"
                      Command="{Binding UndoCommand}"/>
            <MenuItem Header="やり直す(_R)"
                      InputGestureText="Ctrl+Y"
                      Command="{Binding RedoCommand}"/>
            <Separator />
            <MenuItem Header="切り取り(_T)"
                      InputGestureText="Ctrl+X"
                      Command="{Binding CutCommand}"/>
            <MenuItem Header="コピー(_C)"
                      InputGestureText="Ctrl+C"
                      Command="{Binding CopyCommand}"/>
            <MenuItem Header="貼り付け(_P)"
                      InputGestureText="Ctrl+V"
                      Command="{Binding PasteCommand}"/>
            <MenuItem Header="削除(_L)"
                      InputGestureText="Del"
                      Command="{Binding DeleteCommand}"/>
            <Separator />
            <MenuItem Header="検索(_F)..."
                      InputGestureText="Ctrl+F"
                      Command="{Binding OpenFindCommand}"/>
            <MenuItem Header="次を検索(_N)"
                      InputGestureText="F3"
                      Command="{Binding FindNextCommand}"/>
            <MenuItem Header="前を検索(_V)"
                      InputGestureText="Shift+F3"
                      Command="{Binding FindPrevCommand}"/>
            <MenuItem Header="置換(_R)..."
                      InputGestureText="ctrl+H" />
            <MenuItem Header="行へ移動(_G)..."
                      InputGestureText="ctrl+G" />
            <Separator />
            <MenuItem Header="すべて選択(_A)"
                      InputGestureText="Ctrl+A" />
            <MenuItem Header="日付と時刻(_D)"
                      InputGestureText="F5"
                      Command="{Binding InsertDateTimeCommand}"/>
        </MenuItem>
        <MenuItem Header="書式(_O)">
            <MenuItem Header="右端で折り返す(_W)"
                      Command="{Binding ToggleWordWrapCommand}"
                      IsChecked="{Binding IsWordWrap.Value}"/>
            <MenuItem Header="フォント(_F)..." />
        </MenuItem>
        <MenuItem Header="表示(_V)">
            <MenuItem Header="ズーム(_Z)">
                <MenuItem Header="拡大(_I)"
                          InputGestureText="Ctrl+プラス記号"
                          Command="{Binding ZoomCommand}"
                          CommandParameter="{x:Static commands:ZoomOperation.In}"/>
                <MenuItem Header="縮小(_O)"
                          InputGestureText="Ctrl+マイナス記号"
                          Command="{Binding ZoomCommand}"
                          CommandParameter="{x:Static commands:ZoomOperation.Out}"/>
                <MenuItem Header="規定の倍率に戻す(_R)"
                          InputGestureText="Ctrl+0"
                          Command="{Binding ZoomCommand}"
                          CommandParameter="{x:Static commands:ZoomOperation.Reset}"/>
            </MenuItem>
            <MenuItem Header="ステータスバー(_S)"
                      IsCheckable="True"
                      Command="{Binding ToggleStatusBarCommand}"
                      IsChecked="{Binding ShowStatusBar.Value}"/>
        </MenuItem>
        <MenuItem Header="ヘルプ(_H)">
            <MenuItem Header="バージョン情報(_A)"
                      Command="{Binding OpenAboutCommand}" />
        </MenuItem>
    </Menu>
</UserControl>

